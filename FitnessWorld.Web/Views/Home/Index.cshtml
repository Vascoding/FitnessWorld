@{
    ViewData["Title"] = "Home Page";
}

    <link rel="stylesheet" href="~/css/site.css" />

<div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 1000px; height: 600px;" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://www.muscleprodigy.com/wp-content/uploads/2015/06/wallpaper1.jpg" style="width: 1000px; height: 600px;" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Register to our site and learn everithing for healty body
                    <a class="btn btn-default" asp-area="" asp-controller="Account" asp-action="Register">
                        Register
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="http://hdwallpaperfx.com/wp-content/uploads/2016/04/Blonde-Fitness-Girl-With-Dumbbells.jpg" style="width: 1000px; height: 600px;" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Ask questions in our forum
                    <a class="btn btn-default" asp-area="Forum" asp-controller="Home" asp-action="Index">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="http://www.wallpaperbetter.com/wallpaper/946/692/58/fitness-girl-2K-wallpaper.jpg" style="width: 1000px; height: 600px;" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Check out our workout videos and best trainers
                    <a class="btn btn-default" asp-area="Trainings" asp-controller="Workouts" asp-action="Index">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://s3-eu-central-1.amazonaws.com/grouponworks-s3/content/uploads/2014/09/17160115/fitness-woman11.jpg" style="width: 1000px; height: 600px;" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Calculate your daily calories
                    <a class="btn btn-default" asp-area="Calculator" asp-controller="Calculate" asp-action="Index">
                        Learn more
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

