@model FoodServiceModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <hr />
            <input hidden value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input readonly asp-for="Name" class="form-control" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label for="Quantity">Quantity</label>
                <input name="quantity" id="Quantity" class="form-control" type="number" min="1" step="1" value="1"/>
            </div>
            <button type="submit" class="btn btn-warning">Add</button>
            <a class="btn btn-default" asp-area="Admin" asp-controller="Food" asp-action="Index">Cancel</a>
        </form>

    </div>
</div>
