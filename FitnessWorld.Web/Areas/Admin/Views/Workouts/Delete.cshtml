@model WorkoutCrudModel
@{
    ViewData["Title"] = "Delete workout";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" asp-action="Confirm">
            <hr />
            <input hidden name="id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input readonly asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea readonly asp-for="Description" class="form-control" rows="24" cols="24"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoId"></label>
                <input readonly asp-for="VideoId" class="form-control" />
                <span asp-validation-for="VideoId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-default" asp-area="Admin" asp-controller="Workouts" asp-action="Index">Back</a>
        </form>
    </div>
</div>
