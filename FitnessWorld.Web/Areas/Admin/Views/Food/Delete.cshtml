@model FoodCrudModel
@{
    ViewData["Title"] = "Delete Food";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <hr />
            
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" readonly class="form-control" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label asp-for="Calories"></label>
                <input asp-for="Calories" readonly class="form-control" value="@Model.Calories" />
            </div>
            <div class="form-group">
                <label asp-for="Fat"></label>
                <input asp-for="Fat" readonly class="form-control" value="@Model.Fat" />
            </div>
            <div class="form-group">
                <label asp-for="Protein"></label>
                <input asp-for="Protein" readonly class="form-control" value="@Model.Protein" />
            </div>
            <div class="form-group">
                <label asp-for="Carbs"></label>
                <input asp-for="Carbs" readonly class="form-control" value="@Model.Carbs" />
            </div>
            <div class="form-group">
                <label asp-for="Fiber"></label>
                <input asp-for="Fiber" readonly class="form-control" value="@Model.Fiber" />
            </div>
            <div class="form-group">
                <label asp-for="Sugar"></label>
                <input asp-for="Sugar" readonly class="form-control" value="@Model.Sugar" />
            </div>
            <button type="submit" class="btn btn-danger" asp-action="Confirm" asp-route-id="@Model.Id">Delete</button>
            <a class="btn btn-default" asp-area="Admin" asp-controller="Food" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>
